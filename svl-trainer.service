# /etc/systemd/system/svl-trainer.service
[Unit]
Description=SVL Trainer API サーバ
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/apps/svl-trainer/server/src/svl_trainer_server

ExecStart=/home/ubuntu/apps/svl-trainer/server/venv/bin/uvicorn main:app \
  --host 127.0.0.1 \
  --port 12000

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
